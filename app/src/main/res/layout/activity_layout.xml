<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    tools:context="diego_gutierrez.androidfrontendimplement.LayoutActivity">


    <TextView
        android:id="@+id/tit_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear Layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"/>


    <LinearLayout
        android:id="@+id/cont_linear"
        android:layout_below="@+id/tit_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 2"
            android:id="@+id/txt_2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 3"
            android:id="@+id/txt_3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="30dp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tit_relative"
        android:layout_below="@+id/cont_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relative Layout"
        android:textColor="@color/colorAccent"

        android:textSize="30dp"/>

    <RelativeLayout
        android:id="@+id/cont_relative"
        android:layout_below="@+id/tit_relative"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:id="@+id/txt_1_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 1"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/txt_2_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 2"
            android:layout_below="@+id/txt_1_rel"

            android:textSize="30dp"/>

        <TextView
            android:id="@+id/txt_3_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 3"
            android:layout_toRightOf="@+id/txt_2_rel"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/txt_4_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text 4"
            android:layout_toRightOf="@+id/txt_2_rel"
            android:layout_below="@+id/txt_3_rel"
            android:textSize="30dp"/>


    </RelativeLayout>

</RelativeLayout>
